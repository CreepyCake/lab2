<h1>Listing ads</h1>
<%= link_to 'New ad', new_ad_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Image</th>
    <th colspan="3"></th>
  </tr>

  <% @ads.each do |ad| %>
    <tr>
     <td><%= ad.title %></td>
      <td><%= ad.text %></td>
      <td><%= image_tag ad.image.url(:thumb) if ad.image.url %></td>
      <td><%= link_to 'Show', ad_path(ad) %></td>
      <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
      <td><%= link_to 'Destroy', ad_path(ad),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>